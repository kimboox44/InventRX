        <Button x:Name="btnCommande" ToolTip="Accèder à l'aide relative à la partie Commande" BorderBrush="LightGreen" Content="Commande" Margin="338,3,0,0" VerticalAlignment="Top" Height="30" HorizontalAlignment="Left" Width="159" Click="btnCommande_Click" />

