                    <TabControl Name="TabControlPrincipalDetails"  Margin="0,0,5,0">
                        <TabControl.Resources>
                            <Style TargetType="TabItem">
                                <Setter Property="FontSize" Value="12" />
                                <Setter Property="AllowDrop" Value="True"/>
